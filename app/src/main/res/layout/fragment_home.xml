<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:orientation="vertical"
    android:layout_marginBottom="50dp"
    android:background="@color/colorPrimary">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10sp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/layoutround"
                    android:orientation="vertical"
                    android:padding="10sp"
                    android:layout_margin="10dp"
                    android:onClick="OpenNearBy"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="60sp"
                        android:src="@drawable/parking"
                       />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10sp"
                        android:text="Near By Parking"
                        android:textAllCaps="true"
                        android:textColor="#fff"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/layoutround"
                    android:orientation="vertical"
                    android:padding="10sp"
                    android:layout_margin="10dp"
                    android:onClick="OpenNearByService"


                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="60sp"
                        android:src="@drawable/service"
                       />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10sp"
                        android:text="Near By Service Station"
                        android:textAllCaps="true"
                        android:textColor="#fff"
                        android:textSize="12sp"
                        android:textStyle="bold" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/layoutround"
                    android:orientation="vertical"
                    android:padding="10sp"
                    android:layout_margin="10dp"
                    android:onClick="OpenNearByWorkshop"
                   >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="60sp"
                        android:src="@drawable/workshop"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10sp"
                        android:text="Near By Workshop"
                        android:textAllCaps="true"
                        android:textColor="#fff"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/layoutround"
                    android:orientation="vertical"
                    android:padding="10sp"
                    android:layout_margin="10dp"

                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="60sp"
                        android:src="@drawable/saved"
                      />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10sp"
                        android:text="Saved Places"
                        android:textAllCaps="true"
                        android:textColor="#fff"
                        android:textSize="12sp"
                        android:textStyle="bold" />


                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/layoutround"
                    android:orientation="vertical"
                    android:padding="10sp"
                    android:layout_margin="10dp"
                    android:onClick="OpenParkingPin">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="60sp"
                        android:src="@drawable/pin"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="8sp"
                        android:text="Parking Pin"
                        android:textAllCaps="true"
                        android:textColor="#fff"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>



                <LinearLayout
                    android:id="@+id/vehical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/layoutround"
                    android:orientation="vertical"
                    android:padding="10sp"
                    android:layout_margin="10dp"
                    android:onClick="OpenVehicalinfo"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="60sp"
                        android:src="@drawable/vehical"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10sp"
                        android:text="Vehical Information"
                        android:textAllCaps="true"
                        android:textColor="#fff"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/layoutround"
                    android:orientation="vertical"
                    android:padding="10sp"
                    android:onClick="OpenProfile"
                    android:layout_margin="10dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="60sp"
                        android:src="@drawable/profile"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="8sp"
                        android:text="Profile"
                        android:textAllCaps="true"
                        android:textColor="#fff"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/layoutround"
                    android:orientation="vertical"
                    android:padding="10sp"
                    android:layout_margin="10dp"
                    android:onClick="OpenCustomerSupport"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="60sp"
                        android:src="@drawable/cs"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10sp"
                        android:text="customer Support "
                        android:textAllCaps="true"
                        android:textColor="#fff"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/layoutround"
                android:orientation="horizontal"
                android:padding="10sp"
                android:layout_margin="10sp"
                android:onClick="OpenAbout"

                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100sp"
                    android:layout_weight="1"
                    android:src="@drawable/about"/>

                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="10sp"
                    android:text="About App"
                    android:textAllCaps="true"
                    android:textColor="#fff"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>